<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:background="@color/black"
    android:backgroundTint="#abdbe3"
    android:gravity="center">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/button_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@color/selector"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/button_menu"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="198dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="false"
        android:layout_marginStart="22dp"
        android:layout_marginTop="220dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Welcome Back Test"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintVertical_bias="0.09" />

    <Button
        android:id="@+id/button2"
        android:layout_width="373dp"
        android:layout_height="57dp"
        android:layout_below="@id/button3"
        android:layout_centerInParent="true"
        android:onClick="viewGroups"
        android:text="View Groups"
        android:textSize="24sp"
        app:iconTint="#6b898e"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        app:layout_constraintVertical_bias="0.064" />

    <Button
        android:id="@+id/button3"
        android:layout_width="373dp"
        android:layout_height="80dp"
        android:layout_below="@id/imageButton"
        android:layout_centerInParent="true"
        android:onClick="addAlarm"
        android:text="add alarm"
        android:textSize="24sp"
        app:icon="@android:drawable/ic_input_add"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="0.106" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2"
        android:layout_centerInParent="true"
        android:layout_marginTop="3dp"
        android:backgroundTint="#6b898e"
        android:onClick="LogOut"
        android:text="Log Out"
        android:textColor="#2b3739" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="193dp"
        android:layout_height="168dp"
        android:layout_below="@id/textView"
        android:layout_centerInParent="true"
        android:layout_marginTop="3dp"
        android:background="#00FFFFFF"
        android:scaleX="3"
        android:scaleY="3"
        app:srcCompat="@mipmap/ic_logo_foreground" />
</RelativeLayout>